<%=render(:partial=>"shared/header",:object=>nil,:locals=>{:no_styles=>false})%>
<div class="page_body">
	<div class="pretty_form">
		<div class="pretty_form_header">Contact Us</div>
		<div class="pretty_form_body">
			<%form_tag :action=>:exec_request_brochure do -%>
			  <label>
			  	<span>Name:</span>
			  	<%= text_field_tag :name%>
			  </label>
			  <label><span>Business Name</span>: <%= text_field_tag :business_name%></label>
			  <label><span>email</span>: <%= text_field_tag :email_address%></label>
			  <label><span>street address</span>: <%= text_field_tag :mail_address%></label>
			  <label><span>City</span>: <%= text_field_tag :city%> State:<%= text_field_tag :state,nil,{:size=>2}%> Zip:<%= text_field_tag :zip,nil,{:size=>5}%></label>
			  <label><span>Phone</span>: <%= text_field_tag :phone%></label>
			  <p><%=submit_tag "Submit"%></p>
			 
			<% end -%>
			
		</div>
	</div>
</div>
